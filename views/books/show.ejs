<h1><%= book.title %></h1>
<div class="">
    <img  width="100" height="150" src="<%= book.coverImagePath %>">
</div>
<div class="">
    <div class=""><h4>Author Name: </h4><a href="/authors/<%= book.author.id %>"><% if (book.author != null){ %><%= book.author.name %><% } %></a></div>
    <div class=""><h4>Publish Date: </h4><%= book.publishDate.toDateString() %></div>
    <div class=""><h4>Page Count: </h4><%= book.pageCount %></div>
    <div class=""><h4>Description: </h4><%= book.description %></div>
</div>
<div class="actions">
    <a href="/books/<%= book.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', {url: `/books/${book.id}`}) %>
</div>