<h2>Search Books</h2>
<form action="/books" method="get">
    <div class="form-field">
        <label>Search Book by Title</label>
        <input type="text" name="name" value="<%= searchOption.name %>" placeholder="Search Book by Title">
    </div>
    <div class="form-field">
        <label>Publish Before</label>
        <input type="date" name="publishBefore" value="<%= searchOption.publishBefore %>" placeholder="Search Book by date">
    </div>
    <div class="form-field">
        <label>Publish After</label>
        <input type="date" name="publishAfter" value="<%= searchOption.publishAfter %>" placeholder="Search Book by date">
    </div>
    <button>Search</button>
</form>
<hr>
<% if(books.length > 0) { %>
    <% books.forEach( book => { %>
        <a class="button" href="/books/<%= book.id%>">
            <img  width="100" height="150" src="<%= book.coverImagePath %>">
        </a>
        <label><a class="button" href="/books/<%= book.id%>"><%= book.title %></a></label>
        <small><%= book.publishDate.toISOString().split('T')[0] %></small>
        <div class="actions">
            <a class="button" href="/books/<%= book.id%>/edit">Edit</a>
            <%- include('../partials/deleteForm', {url: `/books/${book.id}` }) %>
        </div>
    <% }) %>
<% } else { %>    
    No Books found!
<% } %>